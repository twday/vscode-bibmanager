{
    "brackets": [
        [ "(", ")" ],
        [ "[", "]" ],
        [ "{", "}" ]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "\"", "close": "\"", "notIn": ["string"]},
        { "open": "'", "close": "'", "notIn": ["string"]}
    ],
    "autoCloseBefore": ";:.,=}])> \n\t",
    "surroundingPairs": [
        [ "(", ")" ],
        [ "[", "]" ],
        [ "{", "}" ],
        [ "\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^@\\w+{",
            "end": "%}"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
		"increaseIndentPattern": "^((?!.*?\\/\\*).*\\*\/)?\\s*[\\}\\]].*$",
		"decreaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$"
    }
}